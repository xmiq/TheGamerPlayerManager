@model IEnumerable<Manager.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.IsOwner)
{
    <p>
        @Html.ActionLink("Create New", nameof(Manager.Controllers.PlayerController.Create), new { id = ViewBag.Username })
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Story)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Story)
            </td>
            <td>
                @if (ViewBag.IsOwner)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID, username = ViewBag.Username }) <span> |</span>
                }
                @Html.ActionLink("Details", "Details", new { id = item.ID, username = ViewBag.Username })
                @if (ViewBag.IsOwner)
                {
                    <span> |</span> @Html.ActionLink("Delete", "Delete", new { id = item.ID, username = ViewBag.Username })
                }
            </td>
        </tr>
    }
</table>
@if (ViewBag.IsOwner)
{
    <p>
        @Html.ActionLink("Back to Profile", nameof(Manager.Controllers.AccountController.AccountProfile).Replace("Account", ""), nameof(Manager.Controllers.AccountController).Replace("Controller", ""))
    </p>
}